{
  "name": "cmaketoolchains",
  "displayName": "CMakeToolchains",
  "description": "",
  "version": "0.0.1",
  "publisher": "a1d2d",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebugResolve:cmake-toolchains",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cmaketoolchains.selectProfile",
        "title": "Select Profile",
        "category": "CMake Toolchains"
      },
      {
        "command": "cmaketoolchains.selectTarget",
        "title": "Select Target",
        "category": "CMake Toolchains"
      },
      {
        "command": "cmaketoolchains.buildTarget",
        "title": "Build Selected Target",
        "category": "CMake Toolchains",
        "icon": "$(symbol-constructor)"
      },
      {
        "command": "cmaketoolchains.runTarget",
        "title": "Run Selected Target",
        "category": "CMake Toolchains",
        "icon": "$(run)"
      },
      {
        "command": "cmaketoolchains.debugTarget",
        "title": "Debug Selected Target",
        "category": "CMake Toolchains",
        "icon": "$(bug)"
      },
      {
        "command": "cmaketoolchains.configureSettings",
        "title": "Configure Settings",
        "category": "CMake Toolchains",
        "icon": "$(gear)"
      },
      {
        "command": "cmaketoolchains.syncCMake",
        "title": "Reload/Sync CMakeCache",
        "category": "CMake Toolchains",
        "icon": "$(refresh)"
      },
      {
        "command": "cmaketoolchains.configureToolchains",
        "title": "Configure Toolchains",
        "category": "CMake Toolchains"
      },
      {
        "command": "cmaketoolchains.configureProfiles",
        "title": "Configure Profiles",
        "category": "CMake Toolchains"
      },
      {
        "command": "cmaketoolchains.configureTargets",
        "title": "Configure Targets",
        "category": "CMake Toolchains"
      },
      {
        "command": "cmaketoolchains.showCompileCommandStatus",
        "title": "Show Compile Commands Status",
        "category": "CMake Toolchains"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "cmaketoolchains.selectProfile",
          "group": "navigation@1"
        },
        {
          "command": "cmaketoolchains.selectTarget",
          "group": "navigation@2"
        },
        {
          "command": "cmaketoolchains.buildTarget",
          "group": "navigation@3"
        },
        {
          "command": "cmaketoolchains.runTarget",
          "group": "navigation@4"
        },
        {
          "command": "cmaketoolchains.debugTarget",
          "group": "navigation@5"
        },
        {
          "command": "cmaketoolchains.configureSettings",
          "group": "navigation@6"
        },
        {
          "command": "cmaketoolchains.syncCMake",
          "group": "navigation@7"
        }
      ]
    },
    "configuration": {
      "title": "Cmake Build Configurator",
      "properties": {
        "cmaketoolchains.cmakeSelectedProfile": {
          "type": "string",
          "default": "",
          "description": "selected cmake profile."
        },
        "cmaketoolchains.cmakeSelectedTarget": {
          "type": "string",
          "default": "",
          "description": "selected cmake target."
        },
        "cmaketoolchains.cmakeSyncOnBuild": {
          "type": "boolean",
          "default": true,
          "description": "configure cmake project on every build"
        },
        "cmaketoolchains.cmakeToolchains": {
          "type": "array",
          "description": "List of CMake Toolchains.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the toolchain."
              },
              "toolsetFolder": {
                "type": "string",
                "description": "Toolset folder path."
              },
              "cmake": {
                "type": "string",
                "description": "CMake executable path."
              },
              "buildTool": {
                "type": "string",
                "description": "Build tool executable path."
              },
              "ccompiler": {
                "type": "string",
                "description": "C Compiler executable path."
              },
              "cxxcompiler": {
                "type": "string",
                "description": "C++ Compiler executable path."
              },
              "debugger": {
                "type": "string",
                "description": "Debugger executable path."
              }
            }
          }
        },
        "cmaketoolchains.cmakeProfiles": {
          "type": "array",
          "description": "List of CMake profiles.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Profile name (e.g., Debug)."
              },
              "buildType": {
                "type": "string",
                "description": "CMAKE_BUILD_TYPE value."
              },
              "toolchain": {
                "type": "string",
                "description": "Toolchain name to use."
              },
              "generator": {
                "type": "string",
                "description": "CMake generator (e.g. Ninja, Unix Makefiles)."
              },
              "cmakeOptions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Extra CMake command line options."
              },
              "buildDirectory": {
                "type": "string",
                "description": "Build output directory path."
              },
              "buildOptions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Flags for the build step (e.g. -j 14)."
              },
              "environment": {
                "type": "object",
                "description": "Additional environment variables for the build.",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        },
        "cmaketoolchains.cmakeTargets": {},
        "cmaketoolchains.compileCommandTargets": {
          "type": "array",
          "default": [
            {
              "extension": "ms-vscode.cpptools",
              "configSection": "C_Cpp",
              "configKey": "default.compileCommands",
              "enabled": true
            },
            {
              "extension": "llvm-vs-code-extensions.vscode-clangd",
              "configSection": "clangd",
              "configKey": "arguments",
              "enabled": true
            }
          ],
          "description": "Configure which extensions should have their compile commands updated",
          "items": {
            "type": "object",
            "properties": {
              "extension": {
                "type": "string",
                "description": "Extension ID (e.g., 'ms-vscode.cpptools')"
              },
              "configSection": {
                "type": "string",
                "description": "Configuration section name (e.g., 'C_Cpp')"
              },
              "configKey": {
                "type": "string",
                "description": "Configuration key to update (e.g., 'default.compileCommands')"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether this target is enabled"
              }
            },
            "required": ["extension", "configSection", "configKey", "enabled"]
          }
        },
        "cmaketoolchains.autoDetectExtensions": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect and configure available C/C++ language server extensions"
        },
        "cmaketoolchains.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when compile commands are updated"
        }
      }
    },
    "debuggers": [
      {
        "type": "cmake-toolchains",
        "label": "Mock Debug",
        "program": "./out/debugAdapter.js",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "target": {
                "type": "string",
                "description": "target.",
                "default": "all"
              },
              "executable": {
                "type": "string",
                "description": "executable."
              },
              "programArgs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "programArgs"
              },
              "workDir": {
                "type": "string",
                "description": "workDir"
              },
              "environment": {
                "type": "object",
                "description": "Additional environment variables.",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "runAdmin": {
                "type": "boolean",
                "description": "runAdmin",
                "default": false
              },
              "runExternal": {
                "type": "boolean",
                "description": "runExternal",
                "default": false
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.15",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
